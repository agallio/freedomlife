{
  "name": "freedomlife-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/react": "^18.2.14",
    "@types/react-native": "^0.72.2",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "turbo": "^1.4.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.x.x",
    "npm": "please-use-yarn"
  },
  "lint-staged": {
    "./apps/**/*.{ts,tsx}": "bash -c \"yarn lint\"",
    "./packages/**/*.{ts,tsx}": "bash -c \"yarn lint\""
  },
  "scripts": {
    "native": "cd apps/expo && yarn start",
    "web": "cd apps/next && yarn next",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "prepare": "husky install"
  },
  "packageManager": "yarn@3.4.1"
}
