{
  "name": "freedomlife-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/react": "^18.2.33",
    "@types/react-native": "^0.72.6",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.x.x",
    "npm": "please-use-yarn"
  },
  "lint-staged": {
    "./apps/**/*.{ts,tsx}": "bash -c \"yarn lint\"",
    "./packages/**/*.{ts,tsx}": "bash -c \"yarn lint\""
  },
  "scripts": {
    "native": "cd apps/expo && yarn start",
    "web": "cd apps/next && yarn next",
    "vercel-build": "cd apps/next && yarn build",
    "lint": "eslint . --ext js,jsx,ts,tsx && tsc --pretty --noEmit",
    "prepare": "husky install"
  },
  "packageManager": "yarn@3.4.1"
}
